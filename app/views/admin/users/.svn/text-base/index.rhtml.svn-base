<div class="project_container">
			
			<div class="sub_admin_menu">
        <span class="actions">Manage Users</span>&nbsp;|&nbsp;
        <span class="actions"><%= link_to 'Create User',  new_admin_user_path %></span> 
      </div>
			
  		<table border="0" cellspacing="0" cellpadding="0" class="wide forums">
				<tr>
  				<th class="la" width="100px">Name</th>
  				<th class="la" width="100px">Display Name</th>
  				<th class="la" width="100px">Email</th>
  				<th class="la" width="180px">Description</th>
				</tr>
				
				<% for user in @users -%>
				<% color = (color == "#E6E6E6" ? "#FFFFFF" : "#E6E6E6") %>
				<tr style="background-color:<%= color %>">
					<td><%= link_to user.name, :action => 'show', :id => user %></td>
					<td><%= user.display_name %></td>
					<td><%= user.email %></td>
					<td><%= truncate strip_tags(user.description), 100 %></td>
					<td style="width:70px;">
						<%= link_to 'Edit', edit_admin_user_path(user)  %>
						<span style="padding-left:5px;">
				    <%= link_to (image_tag("trash.gif") + " Delete"), admin_user_path(user), :method => :delete, :confirm => 'Are you sure you want to delete this user?' %>
					  </span>
					</td>
				</tr>
				<% end -%>
			</table>

      <div id="pagination">
        <ul><%= will_paginate @users, :container => false, :previous_label => "previous", :next_label => "next" %></ul>
      </div>

</div>
