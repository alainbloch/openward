<div class="project_container">
		<%= render :partial => "menu" %>
    		
		<% form_tag admin_page_path(@page), :method => :put do %>
		
			<%= render :partial => 'form' %>
			
			<div style="float:right;display:block;padding:5px;">
			  
			  <%= submit_tag "Save and Preview", :class => "submit" %>
				<%= submit_tag "Save",  :class => "submit" %> or 
				<%= link_to "Cancel", { :action => 'index' }, { :confirm => 'Are you sure you want to cancel?' } %> | 
				<%= link_to 'Delete',{ :action => 'destroy', :id => @page }, :confirm => 'Are you sure you want to delete this page?' %>
			</div>
		<% end %>
</div>
