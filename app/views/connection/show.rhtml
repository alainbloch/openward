<div id="masthead_nav">
  <h3>P&amp;P Masthead</h3>
  
  <%= render :partial => "pages/page_links" %>

<% if @setting.connection_page; @page = @setting.connection_page %>

  <% if @page.media %>
    <%= image_tag url_for_file_column(@page.media, 'file'), :style => "width:232px;" %>  
  <% end %>

  <blockquote><p> &ldquo;<%= @page.quote %>&rdquo;</p>
  </blockquote>

  <div class="citation"><span class="author"><%= @page.quote_author %></span><%= @page.quote_source %></div>

<% end %>

</div>      


<div id="main" class="masthead_content">
<% if @setting.connection_page %>
  <h1>
    <%= link_to( "(Edit Page)", edit_admin_page_path(@setting.connection_page), :style => "display:inline;float:right;") if current_user %>
    <%= @setting.connection_page.title %>
  </h1>
  <div id="article_content">
  <p><%= @setting.connection_page.content %></p>
  </div>
<% else %>
  <h1>Make a Connection</h1>
  <div id="article_content">
  <p class="feedback_requests">Caught some news on the wire?<br />
  Have an idea about and article for P&amp;P?<br />
  Please do get in touch.</p>
  </div>
<% end %>
      

<div id="form">
  <%= flash[:notice] %><%= flash[:error]%>
  <% form_remote_tag :url => connection_path do %>
    <%= render :partial => "form" %>
    <button type="submit">Send</button>
  <% end %>
</div>

</div>
