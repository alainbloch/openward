<% content_for :preview do %>
  
  <% if @preview_action == "edit"%>
    <%= form_tag edit_admin_page_path(@page), :method => :get  %>
  <% else %>
    <%= form_tag new_admin_page_path, :method => :get %>
  <% end %> 

    <!-- hidden form fields -->
    <div style="display:none;">
      <%= render :partial => 'form' %>
    </div>
    <%= submit_tag "Return" %>
    <!-- end hidden form fields -->
  </form>
  
<% end %>

