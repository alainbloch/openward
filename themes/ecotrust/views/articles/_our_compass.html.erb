<!--list_item_start-->
<li class="perspectives_list_item">
   <div class="perspectives_list_item_content">
     <h2 class="article_title"><%= link_to our_compass.title, section_article_path(our_compass.permalink_params.merge(:section_id => @section.uri)) %></h2>
     <p><%= our_compass.excerpt %></p>
       <%= link_to "readmore", section_article_path(our_compass.permalink_params.merge(:section_id => @section.uri)), :class => "readmore replaced" %>
   </div>
   <!-- .perspectives_list_item_content -->
   <div class="metadata">
     <span><%= our_compass.published_at.strftime("%b %d, %Y") %></span>
     <%= render :partial => "tags/association", :locals => {:taggable => our_compass} %>
     <span class="comments"><%= pluralize our_compass.approved_comments.size, "Comment" %></span>
     <span class="permalink"><%= link_to "permalink", section_article_path(our_compass.permalink_params.merge(:section_id => @section)) %></span>
   </div>
   <!-- .perspectives_metadata -->

   <!-- .tags -->
</li>
<!-- .perspectives_list_item -->